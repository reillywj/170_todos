<% if @lists.empty? %>
  <div class="no_list">You have no lists yet.</div>
<% else %>
  <ul id="lists">
    <% @lists.each_with_index do |list, index| %>
      <% if all_todos_completed?(list)%>
        <li class="complete">
      <% else %>
        <li>
      <% end %>
        <a href="/list/<%= index %>">
          <h2><%= list[:name] %></h2><p><%= todos_remaining(list) %>/<%= total_todos(list) %></p>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>