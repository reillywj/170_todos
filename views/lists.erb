<% if @lists.empty? %>
  <section class="no_list">You have no lists yet.</div>
<% else %>
  <ul id="lists">
    <% sort_lists(@lists) do |list, index| %>
      <li class="<%= list_class(list) %>">
        <a href="<%= list_path(index)%>">
          <h2><%= list[:name] %></h2><p><%= todos_remaining_count(list) %> / <%= total_todos_count(list) %></p>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>