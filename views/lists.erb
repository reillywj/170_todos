<% if @lists.empty? %>
  <p class="no_list">You have no lists yet.</p>
<% else %>
  <ul id="lists">
    <% @lists.each_with_index do |list, index| %>
      <li>
        <a href="/list/<%= index %>">
          <h2><%= list[:name] %></h2><p><%= list[:todos].size %></p>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>

<a href="/lists/new">New List</a>